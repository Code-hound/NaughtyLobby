        <small class="text-muted">Donec id elit non mi porta.</small>
      </a>
    </div>
  </div>
  <div class="col-sm-12 col-md-6">
    <div>
      <div class="text-center">
        <h2> Cost to Rent per Day </h2>
        <h4> <%= @politician.daily_price %> EUR</h4>
      </div>
      <div>
        <%= form_for([@politician, @meeting])do |f| %>
        <%= f.date_field :start_date%>
        <%= f.date_field :end_date%>
        <%= f.submit "Rent", class: "btn btn-primary btn-sm" %>
          <% end %>
      </div>
    </div>
    <div>
      <div class="text-center">
        <h2> Cost to Buy My Vote </h2>
        <h4> <%= @politician.vote_price %> EUR or Crimeria </h4>
      </div>
      <div>
        <%= form_for([@politician, @vote])do |f| %>
        <div>
        <%= f.select :subject, Vote::SUBJECTS %> <br>
        </div>
        <div class="toggle-container">
          <div class=“vote-yes”>
           <h4> Vote For </h4>
         </div>
          <label class="switch">
            <%= f.check_box :position %>
            <span class="slider round"></span>
          </label>
          <div class=“vote-no”>
           <h4> Vote Against </h4>
         </div>
        </div>
        <%= f.submit "Click to Buy My Vote", class: "btn btn-primary btn-lg algin-content align-middle" %>
        <% end %>
      </div>
    </div>
  </div>
</div>

