<div class="politician-header">
  <div class="loction-photo" style="background: linear-gradient(to bottom,rgba(20,20,20, 0.8),rgba(76,76,76,0.2) 30%), url(<%= image_path 'moscow.jpg' %>) center / cover no-repeat;">
  </div>
  <div>
   <%= image_tag(@politician.photo_url, :class => "politician-avatar")%>
 </div>
</div>

<div class="buffer">
</div>


<div class="wrapper">
  <div class="container text-center">
    <div class="row">
      <div class="col-sm-12 bottom-border">
        <div class="politicain-about">
         <h1 class="name"><%= @politician.name %></h1>
         <h3class="tagline"><%= @politician.tag_line %></h3>
         <p class="description text-center"> <%= @politician.general_description %></p>
         <p class="party">(<%= @politician.party %>)</p>
       </div>
     </div>
   </div>
 </div>
<%= render 'shared/flashes' %>

 <div class="container align-content">
  <div class="row">
   <div class="col-sm-12 col-md-6">
    <div class="text-center">
      <h3> <%= @politician.name %> has 32 Total Reviews</h3>
      <h5> Average Rating of 2.2</h5>
      <h5> Average Verified Rating of 8.2</h5>
      <h5>
      <%= link_to "Add a Review", new_politician_review_path(@politician), class: "btn btn-primary btn-lg" %>
      </h5>
    </div>
    <div class="list-group">
      <a href="#" class="list-group-item list-group-item-action flex-column align-items-start active">
        <div class="d-flex w-100 justify-content-between">
          <h5 class="mb-1">List group item heading</h5>
          <small>3 days ago</small>
        </div>
